<% content_for(:title, "Stack Overflow | Home") %>

<h1>Stack Overflow</h1>

<ul>
  <% @questions.each do |question| %>
    <div class="well">
      <li><%= link_to question.title, question_path(question) %> Votes: <%= question.number_of_votes %></li>
      <% if current_user %>
        <%= button_to "Up Vote", question_votes_path(question), class: 'btn btn-success btn-xs' %>
      <% end %>
    </div>
  <% end %>
</ul>
