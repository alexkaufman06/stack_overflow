<% content_for(:title, "Stack Overflow | Question") %>

<h1><%= @question.title %></h1>

<h4><%= @question.date %></h4>

<p><%= @question.question %></p>

<%= link_to "Go Back", root_path %>

<hr>

<% if @question.responses.any? %>
  <h4>Here are the responses for this question:</h4>

  <ul>
    <% @question.responses.each do |response| %>
      <li>
        <hr>
        <%= response.date %> <br>
        <%= response.response %>
        <hr>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no responses yet!</p>
<% end %>

<p><%= link_to "Respond", new_question_response_path(@question) %></p>
