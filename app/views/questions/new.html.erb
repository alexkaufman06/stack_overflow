<h1>New Question</h1>

<% if @question.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @question.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @question do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control', required: true, autofocus: true %>
  <%= f.label :date %>
  <%= f.date_field :date, class: 'form-control', required: true %>
  <%= f.label :question %>
  <%= f.text_area :question, size: "30x6", class: 'form-control', required: true %>
  <%= f.submit %>
<% end %>
